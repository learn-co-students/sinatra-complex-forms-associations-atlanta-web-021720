<h1>Create a new Pet</h1>
<br>
<form action="/pets" method="POST">
<label>New Pet's Name</label><br>
<input type="text" name="pet[name]" id="pet_name"><br>

<h2>Add Existing Owner</h2>
<label>Owner:</label>
<br>
<% @owners.each do |owner| %>
<input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" >
<label for="<%=owner.id%>"><%=owner.name%></label>
<%end%>
<br>

<h2>Create New Owner</h2>
<label>Name:</label>
<br>
<input type="text" name="owner[name]" id="owner_name">

<input type="submit" value="Create Pet">

</form>

