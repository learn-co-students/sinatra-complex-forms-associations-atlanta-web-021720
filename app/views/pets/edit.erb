<h1>Update Owner</h1>
<form action="/pets/<%=@pet.id%>" method="POST">
<h2>Edit Pet</h2>
<input type="hidden" id="hidden" name="_method" value="patch">
<label>Update Pet Name</label><br>
<input id="pet_name" type="text" value="<%=@pet.name%>" name="pet[name]"><br>

<h2>Edit Owner</h2>
<% @owners.each do |owner|%>
    <input type="radio" value="<%=owner.id%>" id="<%=owner.id%>" name="pet[owner_id]" <%='checked' if @pet.owner == (owner) %>><%=owner.name%></input>
    <br>
<% end %>

<h2>Create New Owner</h2>
<label>Owner Name:</label>
<input type="text" name="owner[name]" id="owner_name"></input><br>

<input type="submit" value="Update Pet">
</form>

